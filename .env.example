# AI API Configuration
# Copy this file to .env.local and fill in your actual API keys

# OpenAI API Key
# Get your key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Claude API Key (Anthropic)
# Get your key from: https://console.anthropic.com/
VITE_CLAUDE_API_KEY=your_claude_api_key_here

# OpenRouter API Key
# Get your key from: https://openrouter.ai/keys
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default AI Provider (openai, claude, or openrouter)
VITE_DEFAULT_AI_PROVIDER=openai

# Unsplash API Key (for images)
# Get your key from: https://unsplash.com/developers
VITE_UNSPLASH_API_KEY=your_unsplash_api_key_here

# Environment
VITE_ENV=development

# API Endpoints (optional - for custom endpoints)
VITE_OPENAI_API_URL=https://api.openai.com/v1
VITE_CLAUDE_API_URL=https://api.anthropic.com
VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
